# Server
NODE_ENV=development
PORT=3001

# Database (Neon Postgres)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DATABASE?sslmode=require

# BetterAuth
# Generate a strong secret (>=32 chars). Example:
# openssl rand -base64 32
BETTER_AUTH_SECRET=
# Your API origin (used for cookies/origin validation). In production, use https://SEU_DOMINIO
BETTER_AUTH_BASE_URL=http://localhost:3001
# Must match the Nest global prefix + auth controller path
BETTER_AUTH_BASE_PATH=/api/v1/auth
# Comma separated list of allowed origins (dev: Next + API)
BETTER_AUTH_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:3001

# CORS (comma separated)
CORS_ORIGINS=http://localhost:3000

# Redis (BullMQ)
REDIS_URL=redis://localhost:6379

# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_SUCCESS_URL=http://localhost:3000/checkout/sucesso?session_id={CHECKOUT_SESSION_ID}
STRIPE_CANCEL_URL=http://localhost:3000/checkout/cancelado

# Seed admin
ADMIN_EMAIL=admin@auraactivewear.com
ADMIN_PASSWORD=ChangeMe123!
